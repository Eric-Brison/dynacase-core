<script language="JavaScript">



  function reSizeLogo() { 
      winH=getFrameHeight();
      winW=getFrameWidth()
    
      if ((winH>0) && (winW>0))
         document.logo.height= winH/1.2;
    
  }

//  if ([anim])  window.onload = AnimLogin;

  var anim=[anim];
  var dx = 1;
  function AnimLogin() { 
      if (! anim) return;
      var ilogin;
      ilogin = document.getElementById('ilogin');


      if ((ilogin.height < 20) && (ilogin.height > 10)) {
         setTimeout("AnimLogin()",30); // each 30ms
         ilogin.height += dx;
      } else {
         dx = -dx;
         ilogin.height += dx;
         if (dx > 0)  setTimeout("AnimLogin()",1000); // each 1s
         else setTimeout("AnimLogin()",50); // each 1s
      }
    return true;
  }



function iz(id) {
  var o=document.getElementById(id);   
  if (o) {
    o.width=o.width+1;
    o.height=o.height+1;   
    if (o.width > 40) return false;    
    if (o.dz) {
      return false
    }
    setTimeout("iz('"+o.id+"')",1);
    o.iz=true;
    return true;
  }
  return false;
}

function dz(id) {
  var o=document.getElementById(id);   
  if (o) {
    o.width=o.width-1;
    o.height=o.height-1;   
    if (o.width < 31) {
o.style.position='static';
      o.dz=false;
      return false;    
    }
    setTimeout("dz('"+o.id+"')",1);
    o.dz=true;
    return true;
  }
  return false;
}

var csel=false; // selected icon object
var izoom=18;
function fadeIt(th) {     
   th.width-=izoom; 
   th.height-=izoom;
   //setTimeout("dz('"+th.id+"')",100);
   th.style.position='static';
    if (th.className != 'imgSelect') th.className='imgFade';
}
function unFadeIt(th) {
  th.style.top=AnchorPosition_getPageOffsetTop(th.parentNode.parentNode)-3;
  th.style.left=AnchorPosition_getPageOffsetLeft(th.parentNode.parentNode);
  th.style.position='absolute';
  
  th.width+=izoom; 
  th.height+=izoom;
  //setTimeout("iz('"+th.id+"')",100);

  if (th.className != 'imgSelect')   th.className='imgNotFade';
}
function selectIt(th) {
  csel.className='imgFade';
  
  th.className='imgSelect';
  csel=th;
}
</script>


