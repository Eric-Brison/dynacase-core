<VirtualHost @IP@>
ServerName @VIRTUALNAME@
SetEnv dbanakeen @DBNAME@
<Directory "@prefix@">
    <Files ~ "index.php">
      AuthType Basic
      AuthName '@Dbname@ Connection'
      AuthPAM_Enabled  on
      AuthPAM_FallThrough off
      AuthPAM_Service httpd_@dbname@
      Require valid-user
    </Files>
   <FilesMatch "expire.shtml|chgpasswd.php">
      Allow from All   
      AuthType Basic
      AuthName '@Dbname@ Connection'
      AuthPAM_Enabled  on
      AuthPAM_FallThrough off
      AuthPAM_Service httpdwa_@dbname@
      Require valid-user
    </FilesMatch>
</Directory>
</VirtualHost>
